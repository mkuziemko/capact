ocfVersion: 0.0.1
revision: {{ .Revision }}
kind: Interface
metadata:
  prefix: "cap.interface.{{ .Prefix }}"
  name: "{{ .Name }}"
  displayName: "{{ .Name }}"
  description: "{{ .Name }} action for {{ .Prefix }}"
  documentationURL: {{.Metadata.DocumentationURL}}
  supportURL: {{.Metadata.SupportURL}}
  iconURL: https://example.com/icon.png
  {{- if .Metadata.Maintainers }}
  maintainers:
  {{- range $maintainer := .Metadata.Maintainers}}
    - email: {{$maintainer.Email}}
      name: {{$maintainer.Name}}
      url: {{$maintainer.Url}}
  {{- end}}
  {{- end}}

spec:
  input:
    parameters:
      input-parameters:
        typeRef:
          path: cap.type.{{ .Prefix }}.{{ .Name }}-input
          revision: 0.1.0
    typeInstances: {}

  output:
    typeInstances:
      config:
        typeRef:
          path: cap.type.{{ .Prefix }}.config
          revision: 0.1.0
